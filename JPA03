import java.util.Scanner;
public class JPA03{
    public static void main(String[] args){
        while(true){
            System.out.println("Input:");
            Scanner a = new Scanner(System.in);
            int b = a.nextInt();
            if (b%2!=0){
                System.out.println("The number is odd.");
            }else{
                System.out.println("The number is even.");
            }
        }
    }
}
